<h1>Listing challenges</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @challenges.each do |challenge| %>
      <tr id="<%= dom_id(challenge) %>">
        <td><%= challenge.title %></td>
        <td><%= challenge.description %></td>
        <td>
          <%= link_to "List Items", challenge_challenge_items_path(challenge) %>
          <%= link_to 'Show', challenge %>
          <%= link_to 'Edit', edit_challenge_path(challenge) %>
          <%= link_to 'Destroy', challenge, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Challenge', new_challenge_path %>
